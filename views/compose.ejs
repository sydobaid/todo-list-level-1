<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitleID">Title</label>
        <input type="text" name="postTitle" id="postTitleId" class="form-control">

        <label for="postBodyID">Post</label>
        <textarea name="postBody" id="postBodyID" cols="30" rows="5" class="form-control"></textarea>
    </div>

    <button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>
<%- include("partials/footer") -%>